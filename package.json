{
  "name": "project-aqua",
  "private": true,
  "license": "AGPL-3.0-only",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "dev:admin": "turbo dev --filter=@project-aqua/admin",
    "dev:web": "turbo dev --filter=@project-aqua/web",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@project-aqua/eslint-config": "workspace:*",
    "@project-aqua/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
